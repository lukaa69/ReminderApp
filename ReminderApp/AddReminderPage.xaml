<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReminderApp.AddReminderPage"
             BackgroundColor="{StaticResource PrimaryColor}">

    <StackLayout Padding="20">
        <Label Text="Novi podsjetnik" FontSize="24" TextColor="{StaticResource SecondaryColor}" />
        <Entry x:Name="titleEntry" Placeholder="Naziv podsjetnika" BackgroundColor="{StaticResource SecondaryColor}" TextColor="White" />
        <Editor x:Name="descriptionEditor" Placeholder="Opis podsjetnika" HeightRequest="100" BackgroundColor="{StaticResource SecondaryColor}" TextColor="White" />
        <Button Text="Spremi podsjetnik" Clicked="OnSaveReminderClicked" BackgroundColor="{StaticResource AccentColor}" TextColor="White" />
    </StackLayout>

</ContentPage>
